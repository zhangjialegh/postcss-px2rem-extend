{
  "name": "postcss-px2rem-extend",
  "version": "0.0.3",
  "description": "PostCSS plugin postcss px2 to rem",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "px2rem"
  ],
  "scripts": {
    "test": "jest-ci --coverage && eslint-ci ."
  },
  "author": "zhangjialegh <zhangjialegh@github.com>",
  "license": "MIT",
  "repository": "zhangjialegh/postcss-px2rem-extend",
  "devDependencies": {
    "clean-publish": "^1.1.8",
    "eslint": "^7.14.0",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "postcss": "^5.0.21"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
